package sg.edu.nus.iss.club.gui;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.*;

public class AddMemberDialog extends Dialog {
	JPanel panel;
	JButton ok;
	JButton cancel;

	public AddMemberDialog(Frame parent) {
		super(parent,true);
		createFormPanel();
        

        addWindowListener(new WindowAdapter() {
           public void windowClosing(WindowEvent windowEvent){
              dispose();
           }
        });
	}
	
	public void createFormPanel(){
		panel = new JPanel();
		panel.add(new JLabel("Add Member"));
		JLabel l1 = new JLabel("First Name");
		JLabel l2 = new JLabel("Second Name");
		JLabel l3 = new JLabel("Sur Name");
		JTextField tf1 = new JTextField();
		JTextField tf2 = new JTextField();
		JTextField tf3 = new JTextField();
		ok = new JButton("Ok");
		cancel = new JButton("Cancel");
		panel.add(l1);
		panel.add(tf1);
		panel.add(l2);
		panel.add(tf2);
		panel.add(l3);
		panel.add(tf3);
		panel.add(ok);
        panel.add(cancel);
        add(panel);
        setSize(200,200);
		
	}
	
	public void performOkAction(){
		ok.addActionListener(new ActionListener(){
			@Override
			public void actionPerformed(ActionEvent e) {
				if(ok.getModel().isPressed()){
					destroy
				}
				
			}
			
		});
	}

}

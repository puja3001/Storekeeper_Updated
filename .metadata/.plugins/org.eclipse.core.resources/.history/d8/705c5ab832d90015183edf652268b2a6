package sg.edu.nus.iss.club.gui;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.*;

import sg.edu.nus.iss.club.Club;

public class AddMemberDialog extends Dialog {
	JPanel panel;
	JButton ok;
	JButton cancel;
	JTextField tf1,tf2,tf3;
	
	Club club = new Club();

	public AddMemberDialog(Frame parent) {
		super(parent,true);
		createFormPanel();
        

        addWindowListener(new WindowAdapter() {
           public void windowClosing(WindowEvent windowEvent){
              dispose();
           }
        });
	}
	
	public void createFormPanel(){
		panel = new JPanel();
		panel.add(new JLabel("Add Member"));
		JLabel l1 = new JLabel("First Name");
		JLabel l2 = new JLabel("Second Name");
		JLabel l3 = new JLabel("Last Name");
		tf1 = new JTextField();
		tf2 = new JTextField();
		tf3 = new JTextField();
		ok = new JButton("Ok");
		cancel = new JButton("Cancel");
		panel.add(l1);
		panel.add(tf1);
		panel.add(l2);
		panel.add(tf2);
		panel.add(l3);
		panel.add(tf3);
		panel.add(ok);
        panel.add(cancel);
        add(panel);
        setSize(200,200);
		
	}
	
	public void performOkAction(){
		ok.addActionListener(new ActionListener(){
			@Override
			public void actionPerformed(ActionEvent e) {
				if(ok.getModel().isPressed()){
					String fn = tf1.getText();
					String sn = tf2.getText();
					String ln = tf3.getText();
					if((fn!=null && ln!= null && sn!=null) || (fn!=null && ln!= null)){
						club.addMember(ln, fn, sn);
					}
				}
				
			}
			
		});
	}

}

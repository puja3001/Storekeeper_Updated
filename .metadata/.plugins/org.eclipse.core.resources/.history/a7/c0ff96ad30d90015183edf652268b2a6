package sg.edu.nus.iss.club.gui;

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.*;

public class AddMemberDialog extends Dialog {
	JPanel panel;
	JButton ok;
	JButton cancel;

	public AddMemberDialog(Frame parent) {
		super(parent,true);
		panel = new JPanel();
		ok = new JButton("Ok");
		cancel = new JButton("Cancel");
        panel.add(ok);
        panel.add(cancel);
        add(panel);
        setSize(200,200);
        

        addWindowListener(new WindowAdapter() {
           public void windowClosing(WindowEvent windowEvent){
              dispose();
           }
        });
	}
	
	public void createFormPanel(){
		JPanel panel = new JPanel();
		panel.add(new JLabel("Add The Details"));
		JTextField tf1 = new JTextField();
		JTextField tf2 = new JTextField();
		JTextField tf3 = new JTextField();
		panel.add(tf1);
		panel.add(tf2);
		panel.add(tf3);
		
	}
	
	public void performOkAction(){
		ok.addActionListener(new ActionListener(){
			@Override
			public void actionPerformed(ActionEvent e) {
				if(ok.getModel().isPressed() == true)
				
			}
			
		});
	}

}
